generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String               @id @default(dbgenerated("(gen_random_uuid())::text"))
  name                    String?
  email                   String?              @unique
  emailVerified           DateTime?
  image                   String?
  bio                     String?
  city                    String?
  isSeller                Boolean              @default(false)
  isAdmin                 Boolean              @default(false)
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @default(now()) @updatedAt
  username                String?              @unique
  phone                   String?
  countryCode             String?
  onboardingStep          Int?                 @default(0)
  role                    UserRole?
  onboardingCompleted     Boolean              @default(false)
  passwordHash            String?              @map("password_hash")
  isLocked                Boolean              @default(false)
  isPremium               Boolean?             @default(false) @map("is_premium")
  boosterScore            Int                  @default(0)
  boosterPercent          Int                  @default(0)
  boosterLevel            String               @default("Starter Boost")
  boosterUpdatedAt        DateTime?
  accounts                Account[]
  auditLogs               AuditLog[]
  brandCategories         BrandCategory[]
  brandMedia              BrandMedia[]
  brandPlatforms          BrandPlatform[]
  brandProfile            BrandProfile?
  favorites               Favorite[]
  influencerCategories    InfluencerCategory[]
  influencerMedia         InfluencerMedia[]
  influencerProfile       InfluencerProfile?
  influencerSocials       InfluencerSocial[]
  messages                Message[]
  orders                  Order[]              @relation("buyer")
  reports                 Report[]
  reviews                 Review[]
  seller                  Seller?
  sessions                Session[]
  userLocation            UserLocation?
  threadMessages          ThreadMessage[]
  contactRequestsSent     ContactRequest[]     @relation("ContactRequestFrom")
  contactRequestsReceived ContactRequest[]     @relation("ContactRequestTo")
  threadsAsUserA          Thread[]             @relation("ThreadUserA")
  threadsAsUserB          Thread[]             @relation("ThreadUserB")
  user_identities         user_identities[]
  influencerPackages      InfluencerPackage[]
  influencerPackageEvents InfluencerPackageEvent[]
  carts                   Cart[]
  brandProposals          Proposal[]           @relation("BrandProposals")
  creatorProposals        Proposal[]           @relation("CreatorProposals")
  proposalMessages        ProposalMessage[]
  creatorEarnings         CreatorEarning[]
  boosters                UserBooster[]
  socialConnections       SocialConnection[]
  socialStatsSnapshots    SocialStatsSnapshot[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Seller {
  id           String    @id @default(cuid())
  userId       String    @unique
  bio          String?
  avatar       String?
  rating       Float     @default(0)
  totalReviews Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  listings     Listing[]
  orders       Order[]   @relation("seller")
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())
  listings  Listing[]
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  slug      String       @unique
  createdAt DateTime     @default(now())
  listings  ListingTag[]
}

model Listing {
  id          String       @id @default(cuid())
  title       String
  description String
  price       Float
  categoryId  String
  sellerId    String
  image       String?
  status      String       @default("active")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  favorites   Favorite[]
  category    Category     @relation(fields: [categoryId], references: [id])
  seller      Seller       @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  tags        ListingTag[]
  orders      Order[]
  reports     Report[]
  reviews     Review[]

  @@index([sellerId])
  @@index([categoryId])
}

model ListingTag {
  id        String   @id @default(cuid())
  listingId String
  tagId     String
  createdAt DateTime @default(now())
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@unique([listingId, tagId])
}

model Order {
  id         String    @id @default(cuid())
  listingId  String
  buyerId    String
  sellerId   String
  status     String    @default("pending")
  totalPrice Float
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  messages   Message[]
  buyer      User      @relation("buyer", fields: [buyerId], references: [id], onDelete: Cascade)
  listing    Listing   @relation(fields: [listingId], references: [id])
  seller     Seller    @relation("seller", fields: [sellerId], references: [id], onDelete: Cascade)
  creatorEarnings CreatorEarning[]
  payment    Payment?

  @@index([buyerId])
  @@index([sellerId])
  @@index([listingId])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  senderId  String
  orderId   String
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([senderId])
}

model Review {
  id         String   @id @default(cuid())
  rating     Int
  comment    String
  reviewerId String
  listingId  String
  createdAt  DateTime @default(now())
  reports    Report[]
  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  reviewer   User     @relation(fields: [reviewerId], references: [id], onDelete: Cascade)

  @@unique([listingId, reviewerId])
  @@index([listingId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  createdAt DateTime @default(now())
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
}

model Report {
  id         String    @id @default(cuid())
  userId     String
  listingId  String?
  reviewId   String?
  reason     String
  resolved   Boolean   @default(false)
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())
  listing    Listing?  @relation(fields: [listingId], references: [id])
  review     Review?   @relation(fields: [reviewId], references: [id])
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model FeatureFlag {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
}

model ContactRequest {
  id         String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  fromUserId String   @map("from_user_id")
  toUserId   String   @map("to_user_id")
  message    String
  status     String   @default("new")
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updated_at DateTime @default(now()) @db.Timestamp(6)
  fromUser   User     @relation("ContactRequestFrom", fields: [fromUserId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  toUser     User     @relation("ContactRequestTo", fields: [toUserId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  thread     Thread?

  @@index([fromUserId, createdAt], map: "idx_contact_requests_from_user")
  @@index([toUserId, status, createdAt], map: "idx_contact_requests_to_user")
  @@map("contact_requests")
}

model Thread {
  id            String          @id @default(cuid())
  userAId       String          @map("user_a_id")
  userBId       String          @map("user_b_id")
  createdAt     DateTime        @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt     DateTime        @default(now()) @map("updated_at") @db.Timestamp(6)
  lastMessageAt DateTime?       @map("last_message_at") @db.Timestamp(6)
  requestId     String?         @unique @map("request_id")
  messages      ThreadMessage[]
  request       ContactRequest? @relation(fields: [requestId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userA         User            @relation("ThreadUserA", fields: [userAId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userB         User            @relation("ThreadUserB", fields: [userBId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userAId, userBId], map: "contact_threads_pair_idx")
  @@map("contact_threads")
}

model ThreadMessage {
  id        String   @id @default(cuid())
  threadId  String   @map("thread_id")
  senderId  String   @map("sender_id")
  body      String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("contact_messages")
}

model UserLocation {
  id          String   @id @default(cuid())
  userId      String   @unique
  pincode     String?
  district    String?
  statename   String?
  officename  String?
  latitude    String?
  longitude   String?
  fullAddress String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([pincode])
}

model InfluencerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  gender      String?
  dob         String?
  languages   String[] @default([])
  title       String?
  description String?
  portfolioTitle String?
  portfolioLinks String[] @default([])
  contentCapabilities String[] @default([])
  shootingStyles      String[] @default([])
  editingSelf         Boolean?
  editingTools        String[] @default([])
  editingOther        String?
  adExperience        String?
  adCountRange        String?
  adPlatforms         String[] @default([])
  brandStrengths      String[] @default([])
  pricingModel        String?
  sampleLinks         String[] @default([])
  boostersConfirmed   Boolean?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model InfluencerCategory {
  id        String   @id @default(cuid())
  userId    String
  key       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
  @@index([key])
}

model InfluencerSocial {
  id        String   @id @default(cuid())
  userId    String
  platform  String
  username  String?
  followers String?
  url       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
}

model SocialConnection {
  id            String   @id @default(cuid())
  userId        String
  platform      String
  accountId     String?
  accessToken   String?
  refreshToken  String?
  expiresAt     DateTime?
  stats         Json?
  verified      Boolean  @default(false)
  lastFetchedAt DateTime?
  fetchStatus   String   @default("OK")
  errorMessage  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
  @@map("social_connections")
}

model SocialStatsSnapshot {
  id        String   @id @default(cuid())
  userId    String
  platform  String
  stats     Json
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([platform])
  @@map("social_stats_snapshots")
}

model BrandProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  hereToDo     String?
  approxBudget String?
  businessType String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BrandCategory {
  id        String   @id @default(cuid())
  userId    String
  key       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
  @@index([key])
}

model BrandPlatform {
  id        String   @id @default(cuid())
  userId    String
  key       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
  @@index([key])
}

model InfluencerMedia {
  id        String              @id @default(cuid())
  userId    String
  type      InfluencerMediaType
  url       String
  sortOrder Int?
  createdAt DateTime            @default(now())
  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model BrandMedia {
  id        String         @id @default(cuid())
  userId    String
  type      BrandMediaType
  url       String
  sortOrder Int?
  createdAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PincodeOffice {
  officename String
  pincode    String
  district   String?
  statename  String?
  latitude   Float?
  longitude  Float?

  @@id([officename, pincode])
  @@index([officename], map: "pincode_offices_pincode_idx")
  @@map("pincode_offices")
}

model brand_values {
  id         BigInt    @id @default(autoincrement())
  key        String
  value      String
  label      String?
  meta       Json?     @default("{}")
  sort_order Int?      @default(0)
  is_active  Boolean?  @default(true)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)

  @@unique([key, value])
  @@index([key, is_active, sort_order], map: "idx_brand_values_key_active")
}

model influencer_values {
  id         BigInt    @id @default(autoincrement())
  key        String
  value      String
  label      String?
  meta       Json?     @default("{}")
  sort_order Int?      @default(0)
  is_active  Boolean?  @default(true)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)

  @@unique([key, value])
  @@index([key, is_active, sort_order], map: "idx_influencer_values_key_active")
}

model user_identities {
  id               BigInt   @id @default(autoincrement())
  user_id          String
  provider         String
  provider_user_id String
  email            String?
  phone            String?
  created_at       DateTime @default(now()) @db.Timestamp(6)
  updated_at       DateTime @default(now()) @db.Timestamp(6)
  users            User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([provider, provider_user_id])
  @@unique([user_id, provider, provider_user_id])
  @@index([email], map: "idx_user_identities_email")
  @@index([phone], map: "idx_user_identities_phone")
  @@index([user_id], map: "idx_user_identities_user_id")
}

model username_history {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String
  old_username String   @unique(map: "username_history_old_username_unique")
  new_username String?
  changed_at   DateTime @default(now()) @db.Timestamptz(6)

  @@index([user_id, changed_at(sort: Desc)])
}

enum UserRole {
  BRAND
  INFLUENCER
}

enum InfluencerMediaType {
  PROFILE
  COVER
}

enum BrandMediaType {
  PROFILE
  COVER
}

model InfluencerPackage {
  id          String   @id @default(cuid())
  userId      String
  title       String
  platform    String
  price       Float
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  analytics   InfluencerPackageAnalytics?
  events      InfluencerPackageEvent[]
  cartItems   Cart[]
  proposals   Proposal[]
  creatorEarnings CreatorEarning[]

  @@index([userId])
  @@index([platform])
}

model InfluencerPackageAnalytics {
  id        String   @id @default(cuid())
  packageId String   @unique
  views     Int      @default(0)
  clicks    Int      @default(0)
  saves     Int      @default(0)
  orders    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  package   InfluencerPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
}

model InfluencerPackageEvent {
  id        String   @id @default(cuid())
  packageId String
  eventType String
  userId    String?
  ipAddress String?
  sessionId String?
  createdAt DateTime @default(now())
  package   InfluencerPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([packageId])
  @@index([eventType])
  @@index([userId])
}

model Cart {
  id        String             @id @default(cuid())
  userId    String
  packageId String
  quantity  Int
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  package   InfluencerPackage  @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@unique([userId, packageId])
  @@index([userId])
  @@index([packageId])
}


model Proposal {
  id          String   @id @default(cuid())
  brandId     String
  creatorId   String
  packageId   String?
  price       Float
  message     String
  status      ProposalStatus @default(PENDING)
  createdAt  DateTime @default(now())

  brand    User @relation("BrandProposals", fields: [brandId], references: [id])
  creator  User @relation("CreatorProposals", fields: [creatorId], references: [id])
  package  InfluencerPackage? @relation(fields: [packageId], references: [id])
  messages ProposalMessage[]
}

enum ProposalStatus {
  PENDING
  ACCEPTED
  REJECTED
}
model ProposalMessage {
  id         String   @id @default(cuid())
  proposalId String
  senderId   String
  content    String
  createdAt  DateTime @default(now())

  proposal Proposal @relation(fields: [proposalId], references: [id])
  sender   User     @relation(fields: [senderId], references: [id])
}
model CreatorEarning {
  id          String   @id @default(cuid())
  creatorId   String
  orderId     String
  packageId   String
  grossAmount Float
  platformFee Float
  netAmount   Float
  createdAt   DateTime @default(now())

  creator User  @relation(fields: [creatorId], references: [id])
  order   Order @relation(fields: [orderId], references: [id])
  package InfluencerPackage @relation(fields: [packageId], references: [id])
}
model Payment {
  id            String   @id @default(cuid())
  orderId       String   @unique
  provider      PaymentProvider
  providerRef   String?
  amount        Float
  currency      String  @default("INR")
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum PaymentProvider {
  RAZORPAY
  STRIPE
  MOCK
}
model AnalyticsEvent {
  id        String   @id @default(cuid())
  entity    AnalyticsEntity
  entityId  String
  event     AnalyticsEventType
  createdAt DateTime @default(now())

  @@index([entity, entityId])
}

enum AnalyticsEntity {
  PROFILE
  PACKAGE
}

enum AnalyticsEventType {
  VIEW
  CLICK
  SAVE
  ORDER
}

enum BoosterStatus {
  locked
  available
  completed
}

model Booster {
  id          String       @id @default(cuid())
  key         String       @unique // "connect-instagram", "portfolio", etc.
  title       String
  description String
  category    String       // "Verification" | "Profile Power" etc (string is easier)
  points      Int          @default(0)
  isActive    Boolean      @default(true)
  sortOrder   Int          @default(0)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  userBoosters UserBooster[]
}

model UserBooster {
  id          String       @id @default(cuid())
  userId      String
  boosterId   String

  status      BoosterStatus @default(available)
  completedAt DateTime?
  meta        Json?         // store extra: connectedAccountId, links, etc.

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  booster     Booster       @relation(fields: [boosterId], references: [id], onDelete: Cascade)

  @@unique([userId, boosterId]) // idempotent: one booster per user
  @@index([userId])
  @@index([boosterId])
}
